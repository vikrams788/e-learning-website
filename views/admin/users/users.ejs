<%- include('../../header') %>

<div class="container mt-5">
  <h2>User Management</h2>
  <hr>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <a href="/admin/users/update/<%= user._id %>">Update</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../../footer') %>
